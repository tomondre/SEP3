@page "/Providers"
@using GrpcFileGeneration.Models
@using ClientBlazor.Data.Providers
@inject NavigationManager NavigationManager
@inject IProviderService ProviderService


@if (providers == null)
{
    <p class="text-center">
        <em>Loading...</em>
    </p>
}
else if (!providers.Providers.Any())
{
    <p class="text-center">
        <em>No Providers currenlty exist. Please approve some.</em>
    </p>
}
else
{
    <section class="container mx-auto p-6 font-mono">
        <div class="w-full mb-8 overflow-hidden rounded-lg shadow-lg">
            <div class="w-full overflow-x-auto">
                <table class="w-full">
                    <thead>
                    <tr class="text-md font-semibold tracking-wide text-left text-gray-900 bg-gray-100 uppercase border-b border-gray-600">
                        <th class="px-4 py-3">Company Name</th>
                        <th class="px-4 py-3">CVR</th>
                        <th class="px-4 py-3">Description</th>
                        <th class="px-4 py-3">Phone Number</th>
                        <th class="px-4 py-3">City</th>
                        <th class="px-4 py-3">Street</th>
                        <th class="px-4 py-3">Street Number</th>
                        <th class="px-4 py-3">Post Code</th>
                    </tr>
                    </thead>
                    <tbody class="bg-white">
                    @foreach (var item in providers.Providers)
                    {
                        <tr class="text-gray-700" @onclick="() => OpenExperienceView(item)">
                            <td class="px-4 py-3 text-ms font-semibold border">@item.CompanyName</td>
                            <td class="px-4 py-3 text-ms font-semibold border">@item.Cvr</td>
                            <td class="px-4 py-3 text-ms font-semibold border">@item.Description</td>
                            <td class="px-4 py-3 text-ms font-semibold border">@item.PhoneNumber</td>
                            <td class="px-4 py-3 text-ms font-semibold border">@item.Address.City</td>
                            <td class="px-4 py-3 text-ms font-semibold border">@item.Address.Street</td>
                            <td class="px-4 py-3 text-ms font-semibold border">@item.Address.StreetNumber</td>
                            <td class="px-4 py-3 text-ms font-semibold border">@item.Address.PostCode</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
}

@code {
    private ProviderList providers;

    protected override async Task OnInitializedAsync()
    {
        providers = await ProviderService.GetAllProviders();
    }

    private void OpenExperienceView(Provider provider)
    {
        NavigationManager.NavigateTo($"/ProviderExperiences/{provider.Id}");
    }

}